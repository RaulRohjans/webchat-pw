<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>PW Chat|My Chats</title>
    <link rel="icon" type="image/x-icon" href="favicon.ico">

    <!-- CSS -->
    <link rel="stylesheet" type="text/css" href="css/main.css">

    <!-- CSS Animate -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />

    <!-- Font Awesome -->
    <script src="https://kit.fontawesome.com/7b4a19171c.js" crossorigin="anonymous"></script>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>

    <!-- JQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.slim.js"
            integrity="sha256-HwWONEZrpuoh951cQD1ov2HUK5zA5DwJ1DNUXaM6FsY="
            crossorigin="anonymous"></script>

</head>
<body>
<nav class="navbar navbar-expand-lg bg-dark navbar-dark">
    <div class="container">
        <a href="/" class="navbar-brand logo">PW Chat</a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#menu">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="menu">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a href="/chats/new" class="nav-link">Start a Chat</a>
                </li>
                <li class="nav-item">
                    <a href="/chats" class="nav-link active">My Chats</a>
                </li>
                <li class="nav-item">
                    <a href="/account" class="nav-link">Account Settings</a>
                </li>
            </ul>
        </div>
    </div>
</nav>

<section class="main-section">
    <div class="container list-item-container">
        <h1 class="mychats-title">My Chats</h1>
        <%for(let i = 0; i < locals.chats.length; i++) {%>
            <a href="/chats/<%= locals.chats[i].idChat%>">
                <div class="row list-item">
                    <!-- Chat Logo -->
                    <div class="col-md-auto">
                        <%if(locals.chats[i].image) {%>
                            <img class="rounded my-auto chat-image" src="/user-images/<%= locals.chats[i].image%>" alt="chat logo">
                        <%} else {%>
                            <img class="rounded my-auto" src="favicon.ico" alt="chat logo">
                        <%}%>
                    </div>

                    <!-- Title -->
                    <div class="col my-auto">
                        <%if(locals.chats[i].name.length > 30){%>
                            <h5 class="my-auto"><%= locals.chats[i].name.substr(0, 30) + "..."%></h5>
                        <%} else {%>
                            <h5 class="my-auto"><%= locals.chats[i].name%></h5>
                        <%}%>


                        <%if(locals.chats[i].description){%>
                            <%if(locals.chats[i].description.length > 30){%>
                                <p class="my-auto"><%= locals.chats[i].description.substr(0, 30) + "..."%></p>
                            <%} else {%>
                                <p class="my-auto"><%= locals.chats[i].description%></p>
                            <%}%>
                        <%}%>
                    </div>

                    <!-- Leave Icon -->
                    <div class="col my-auto">
                        <div class="d-flex flex-row-reverse">
                            <img id="leave<%= locals.chats[i].idChat%>" class="my-auto exit-icon" src="icons/logout.svg" alt="leave chat">
                            <img id="edit<%= locals.chats[i].idChat%>" class="my-auto edit-icon" src="icons/edit.svg" alt="edit chat">
                        </div>
                        <script>
                            $("#leave<%= locals.chats[i].idChat%>").click(function() {
                                alert( 'You clicked me' );
                                window.location.replace("https://rohjans.live");
                            });

                            $("#edit<%= locals.chats[i].idChat%>").click(function() {
                                window.location.href = 'https://www.google.com'
                            });
                        </script>
                    </div>
                </div>
            </a>
        <%}%>

    </div>
</section>

</body>
</html>