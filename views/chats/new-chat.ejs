<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>PW Chat|New Chat</title>
    <link rel="icon" type="image/x-icon" href="/favicon.ico">

    <!-- CSS -->
    <link rel="stylesheet" type="text/css" href="/css/main.css">

    <!-- Font Awesome -->
    <script src="https://kit.fontawesome.com/7b4a19171c.js" crossorigin="anonymous"></script>

    <!-- JQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.3/dist/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.14/dist/css/bootstrap-select.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.14/dist/js/bootstrap-select.min.js"></script>

    <!-- SweetAlert -->
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>


</head>
<body>
<nav class="navbar navbar-expand-lg bg-dark navbar-dark">
    <div class="container">
        <a href="/" class="navbar-brand logo">PW Chat</a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#menu">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="menu">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a href="/chats/new" class="nav-link active">Start a Chat</a>
                </li>
                <li class="nav-item">
                    <a href="/chats" class="nav-link">My Chats</a>
                </li>
                <li class="nav-item">
                    <a href="/account" class="nav-link">Account Settings</a>
                </li>
            </ul>
        </div>
    </div>
</nav>

<div class="jumbotron d-flex align-items-center min-vh-100">
    <div class="container new-chat-wrapper">
        <form method="POST" action="/chats/new" enctype="multipart/form-data">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="txt_title">Title<span style="color: red">*</span></label>
                        <input type="text" class="form-control" id="txt_title" name="txt_title" placeholder="Title" required>
                    </div>

                    <div class="form-group">
                        <label for="txt_logo">Logo</label>
                        <input type="file" accept=".gif,.jpg,.jpeg,.png" class="form-control" id="file_logo" name="file_logo" placeholder="Logo">
                        <small class="form-text text-muted">We recommend a square image, with an aspect ratio of 1:1.</small>
                    </div>
                </div>

                <div class="form-group col-md-6">
                    <label for="txt_description">Description</label>
                    <textarea class="form-control" style="resize: none;" id="txt_description" name="txt_description" placeholder="Description" rows="4"></textarea>
                </div>
            </div>

            <div class="form-group">
                <div class="search_select_box">
                    <label for="slt_users">Users<span style="color: red">*</span></label>
                    <select class="form-control selectpicker" multiple id="usrSelect" name="usrSelect" title="Pick one or more users..." data-live-search="true" required>

                    </select>
                </div>
            </div>
            <button type="submit" class="btn btn-secondary">Create Chat</button>
        </form>

        <div class="message-wrapper">
            <% if(locals.successMessage) {%>
                <p class="success"><%= locals.successMessage%></p>
            <%} else if(locals.errorMessage) {%>
                <p class="error"><%= locals.errorMessage%></p>
            <%}%>
        </div>

    </div>
</div>

<script>
    $(document).ready(() => {
        $('#usrSelect').selectpicker();

        const select = document.getElementById("slt_users");
        let userList = <%- JSON.stringify(locals.users)%>;

        for(const user of userList){
            $('#usrSelect').append('<option value="'+user.idUser+'">'+user.username+'</option>');
        }
        $("#usrSelect").selectpicker("refresh");
        $('.bs-select-all').html("All");
        $('.bs-deselect-all').html("Nothing");


    })
</script>

</body>
</html>